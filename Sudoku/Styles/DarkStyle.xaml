<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="brushBackground"
					 Color="#333333" />
    <SolidColorBrush x:Key="brushBorder"
					 Color="#AAAAAA" />
    <SolidColorBrush x:Key="brushText"
					 Color="#FFFFFF" />
    <SolidColorBrush x:Key="brushWrongBackground"
					 Color="#333333" />
    <SolidColorBrush x:Key="brushWrongText"
					 Color="#AA0000" />
    <SolidColorBrush x:Key="brushRight"
					 Color="#00AA00" />
    <SolidColorBrush x:Key="brushSelected"
					 Color="#555555" />
    <SolidColorBrush x:Key="brushArea"
					 Color="#444444" />
    <SolidColorBrush x:Key="brushMatchingBackground"
					 Color="#444444" />
    <SolidColorBrush x:Key="brushMatchingText"
					 Color="#0088AA" />

    <Style x:Key="styleSudokuSquare"
		   TargetType="Button">
        <Setter Property="Background"
				Value="{StaticResource brushBackground}" />
        <Setter Property="FontSize"
				Value="24" />
        <Setter Property="BorderBrush"
				Value="{StaticResource brushBorder}" />
        <Setter Property="Foreground"
                Value="{StaticResource brushText}"/>
    </Style>

    <Style x:Key="styleNormalButton"
		   TargetType="Button">
        <Setter Property="Background"
				Value="{StaticResource brushBackground}" />
        <Setter Property="BorderBrush"
				Value="{StaticResource brushBorder}" />
        <Setter Property="Foreground"
				Value="{StaticResource brushText}" />
        <Setter Property="BorderThickness"
				Value="1.5" />
        <Setter Property="FontSize"
				Value="24" />
    </Style>

    <Style x:Key="styleText"
		   TargetType="TextBlock">
        <Setter Property="Foreground"
				Value="{StaticResource brushText}" />
        <Setter Property="FontSize"
				Value="32" />
    </Style>
</ResourceDictionary>