<Page x:Class="Sudoku.GameView"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:local="clr-namespace:Sudoku"
	  mc:Ignorable="d"
	  d:DesignHeight="450"
	  d:DesignWidth="800"
	  Title="GameView"
	  KeyDown="Window_KeyDown">

	<!-- The main grid, left and right panes. -->
	<Grid ShowGridLines="True">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<!-- The new game button -->
		<ComboBox x:Name="cmbxNav"
				  HorizontalAlignment="Left"
				  VerticalAlignment="Top"
				  Margin="20">
			<ComboBoxItem x:Name="cmbxiHamburger"
						  Content="≡"/>
			<ComboBoxItem x:Name="cmbxiHome"
						  Content="Home" 
						  Selected="cmbxiHome_Selected"/>
			<ComboBoxItem x:Name="cmbxiSettings"
						  Content="Settings" 
						  Selected="cmbxiSettings_Selected"/>
			<ComboBoxItem x:Name="cmbxiNewGame"
						  Content="New Game"
						  Selected="cmbxiNewGame_Selected"/>
		</ComboBox>
		<!-- The sudoku board -->
		<Grid Grid.Column="0"
			  ShowGridLines="False"
			  Name="gridView"
			  Width="300"
			  Height="300"
			  HorizontalAlignment="Center">
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
		</Grid>
		<!-- StackPanel used to organize the right panel -->
		<StackPanel Grid.Column="1">
			<Grid ShowGridLines="False"
				  Width="200"
				  Height="200"
				  Margin="25">
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Button Grid.Row="0"
						Grid.Column="0"
						Content="1"
						FontSize="30"
						Background="White"
						Click="KeyPad" />
				<Button Grid.Row="0"
						Grid.Column="1"
						Content="2"
						FontSize="30"
						Background="White"
						Click="KeyPad" />
				<Button Grid.Row="0"
						Grid.Column="2"
						Content="3"
						FontSize="30"
						Background="White"
						Click="KeyPad" />
				<Button Grid.Row="1"
						Grid.Column="0"
						Content="4"
						FontSize="30"
						Background="White"
						Click="KeyPad" />
				<Button Grid.Row="1"
						Grid.Column="1"
						Content="5"
						FontSize="30"
						Background="White"
						Click="KeyPad" />
				<Button Grid.Row="1"
						Grid.Column="2"
						Content="6"
						FontSize="30"
						Background="White"
						Click="KeyPad" />
				<Button Grid.Row="2"
						Grid.Column="0"
						Content="7"
						FontSize="30"
						Background="White"
						Click="KeyPad" />
				<Button Grid.Row="2"
						Grid.Column="1"
						Content="8"
						FontSize="30"
						Background="White"
						Click="KeyPad" />
				<Button Grid.Row="2"
						Grid.Column="2"
						Content="9"
						FontSize="30"
						Background="White"
						Click="KeyPad" />
			</Grid>
			<Grid Width="300">
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Button Width="100"
						Height="50"
						Margin="10"
						Grid.Row="0"
						Grid.Column="0"
						Content="Note" />
				<Button Width="100"
						Height="50"
						Margin="10"
						Grid.Row="0"
						Grid.Column="1"
						Content="Hint" 
						Click="Hint"/>
				<Button Width="100"
						Height="50"
						Margin="25"
						Grid.Row="1"
						Grid.Column="0"
						Content="Undo"
						Click="Undo"/>
				<Button Width="100"
						Height="50"
						Margin="25"
						Grid.Row="1"
						Grid.Column="1"
						Content="Erase" />
			</Grid>
			<Button Width="100"
					Height="50"
					Content="Reset"
					Click="Reset_Board" />
		</StackPanel>
	</Grid>
</Page>
