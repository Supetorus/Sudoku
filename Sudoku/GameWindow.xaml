<Window x:Class="Sudoku.GameWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Sudoku"
		mc:Ignorable="d"
		Title="GameWindow"
		Height="500"
		Width="800"
		Background="{DynamicResource brushBackground}">

	<Grid>
		<Frame Name="mainFrame"
			   Source="Views/HomeView.xaml"
			   NavigationUIVisibility="Hidden" />
		
		<!-- Temporary navigation buttons for quick debugging -->
		<StackPanel FlowDirection="LeftToRight"
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					Height="20"
					VerticalAlignment="Top">
			<Button Name="btnSettings"
					Content="Settings"
					Click="btnSettings_Click" />
			<Button Name="btnHome"
					Content="Home"
					Click="btnHome_Click" />
			<Button Name="btnGame"
					Content="Game"
					Click="btnGame_Click" />
			<Button Name="btnNewGame"
					Content="New Game"
					Click="btnNewGame_Click" />
		</StackPanel>
	</Grid>
</Window>